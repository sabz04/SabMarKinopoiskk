<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainPage">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"


            >
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:text="@string/search_textINFO"
                    android:layout_height="wrap_content"></TextView>
                <EditText
                    android:id="@+id/searchTB"
                    android:layout_width="250dp"
                    android:textAlignment="center"
                    android:layout_height="60dp"></EditText>
                <Button
                    android:id="@+id/searchBTN"
                    android:onClick="SearchClick"
                    android:layout_gravity="center"
                    android:textSize="11dp"
                    android:text="@string/button_search"
                    android:layout_width="100dp"
                    android:layout_height="45dp"></Button>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout

                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/posterIMG"
                        android:layout_width="200dp"
                        android:layout_height="300dp"></ImageView>

                    <LinearLayout
                        android:layout_marginLeft="10dp"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView

                            android:id="@+id/descriptionLB"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minHeight="100dp"
                            ></TextView>
                        <Button
                            android:textSize="11dp"
                            android:text="@string/button_watch"
                            android:layout_width="100dp"
                            android:layout_height="40dp"></Button>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
            <WebView
                android:id="@+id/weblink"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></WebView>
        </LinearLayout>
    </ScrollView>



</RelativeLayout>